<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">
	
	<insert id="addUser" parameterType="User" >
		insert into user values(null,#{username},#{password},#{identify},#{isReal},#{date})
	</insert>
	
	<update id="updateUser" parameterType="User">
		update user set isReal=#{isReal} where username = #{username};
	</update>
	
	<delete id="deleteUser" parameterType="String">
		DELETE FROM user WHERE username = #{username}
	</delete>
	
	<select id="allUsers" resultType="User">
		SELECT * FROM user;
	</select>
	
	<select id="realUsers" resultType="User">
		SELECT * FROM user where isReal=1;
	</select>
		
	<select id="tempUsers" resultType="User">
		SELECT * FROM user where isReal=0;
	</select>
	
	<select id="getTempUsers" resultType="User">
		select username,identify,date from user where isReal=0;
	</select>
	
	<select id="getUserId" parameterType="User" resultType="int">
		select userId from user where username =#{username};
	</select>
	
	<select id="searchResult" resultType="User">
		
	</select>
</mapper>